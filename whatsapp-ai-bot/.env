# ============================================
# WhatsApp AI Bot - Environment Configuration
# ============================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=whatsapp_bot_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_CHARSET=utf8mb4

# WhatsApp Configuration
CHROME_DRIVER_PATH=C:/chromedriver/chromedriver.exe
WHATSAPP_USER_DATA_DIR=C:/WhatsApp_UserData

# Bot Configuration
BOT_1_NAME=Bot_Primary
BOT_1_USER_DATA_PATH=C:/WhatsApp_UserData/Bot1
BOT_1_ENABLED=true

BOT_2_NAME=Bot_Secondary
BOT_2_USER_DATA_PATH=C:/WhatsApp_UserData/Bot2
BOT_2_ENABLED=false

# RAG Configuration
FAISS_INDEX_PATH=data/faiss_index
FAQ_CSV_PATH=data/faq_database.csv
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVAL_TOP_K=4
SIMILARITY_THRESHOLD=0.65

# Response Configuration
MAX_RESPONSE_LENGTH=1000
RESPONSE_TEMPERATURE=0.3
TIMEOUT_SECONDS=300

# File Paths
TEMP_DOWNLOAD_DIR=C:/temp/whatsapp_downloads
LOG_DIR=logs
RESPONSES_CSV=data/responses.csv

# Email Configuration (for remittance notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@tauedu.org
SMTP_PASSWORD=your-app-password
FINANCE_EMAIL=finance@tauedu.org

# TConnect API (Task Management)
TCONNECT_API_URL=https://api.tconnect.com
TCONNECT_API_KEY=your-tconnect-api-key

# Monitoring & Logging
LOG_LEVEL=INFO
ENABLE_DEBUG_SCREENSHOTS=false
ANTI_LOCK_INTERVAL_SECONDS=240

# Rate Limiting
MAX_MESSAGES_PER_MINUTE=10
IDLE_CHECK_INTERVAL_SECONDS=10

# Security
ALLOWED_CONTACT_PREFIXES=+91,+1
ENABLE_MESSAGE_ENCRYPTION=false
